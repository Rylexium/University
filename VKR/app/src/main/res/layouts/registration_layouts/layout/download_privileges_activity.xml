<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/education_document_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    android:fillViewport="true"
    tools:context=".registrationActivity.DownloadPrivilegesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="9dp"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузите ваши льготы"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:gravity="center"
            />


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_for_images_privileges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

        </LinearLayout>


        <Button
            android:id="@+id/button_add_privileges"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить фотографию"
            android:textColor="@color/white"
            android:background="@drawable/round_btn"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/button_previous_privileges"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:gravity="center"
                android:text="@string/reg_step_8"
                android:textColor="@color/white"
                android:textSize="36dp" />

            <Button
                android:id="@+id/button_next_privileges"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
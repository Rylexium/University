<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passport3_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".activity.registration.Passport3Activity">

    <LinearLayout
        android:id="@+id/passport3_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/round_btn"
            android:text="Введите место жительства(прописка) и\n загрузите стр.5 паспорта"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewPassport3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Адрес постоянной регистрации"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:hint="Почтовый индекс"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_post_index_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/only_numbers"
                android:inputType="phone"
                android:maxLength="6"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Выберите субъект РФ"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_subject_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Населённый пункт"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_city_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Улица"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_residence_street_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="128"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Адрес фактического проживания"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:hint="Почтовый индекс"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_post_index_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/only_numbers"
                android:inputType="phone"
                android:maxLength="6"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Выберите субъект РФ"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_subject_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Населённый пункт"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_city_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="54"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:hint="Улица"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/grey"
            android:textColor="@color/white"
            app:boxStrokeColor="@color/blue_700"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <AutoCompleteTextView
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColorHighlight="@color/blue_700"
                android:id="@+id/textbox_residence_street_actual"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/alfavit_russian"
                android:inputType="none"
                android:maxLength="128"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/button13"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:gravity="center"
                android:text="@string/reg_step_4"
                android:textColor="@color/white"
                android:textSize="36dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>